@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in - My Site</title>

    <!-- Google Identity Services -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <style>
        /* Base */
        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #f6f8fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Center wrapper */
        .main-wrapper {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px 20px;
        }

        .login-container {
            width: 100%;
            max-width: 360px;
        }

        /* Header */
        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header img {
                width: 48px;
                margin-bottom: 16px;
            }

            .header h1 {
                font-size: 24px;
                color: #24292f;
                font-weight: 500;
                margin: 0;
            }

        /* Card */
        .login-card {
            background: #fff;
            border: 1px solid #d0d7de;
            border-radius: 6px;
            padding: 24px;
            box-shadow: 0 1px 3px rgba(27, 31, 35, 0.1);
            animation: fadeInUp 0.4s ease;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-size: 14px;
            font-weight: 600;
            color: #24292f;
        }

        .form-control {
            width: 93%;
            padding: 10px 12px;
            margin-bottom: 16px;
            border: 1px solid #d0d7de;
            border-radius: 6px;
            font-size: 14px;
            background: #f6f8fa;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            .form-control:focus {
                border-color: #0969da;
                background: #fff;
                outline: none;
                box-shadow: 0 0 0 3px rgba(9, 105, 218, 0.2);
            }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background: #2da44e;
            border: 1px solid rgba(27, 31, 35, 0.15);
            border-radius: 6px;
            color: #fff;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: background 0.2s;
        }

            .btn-primary:hover {
                background: #2c974b;
            }

        .divider {
            text-align: center;
            margin: 20px 0;
            font-size: 13px;
            color: #57606a;
            position: relative;
        }

            .divider::before,
            .divider::after {
                content: "";
                position: absolute;
                top: 50%;
                width: 40%;
                height: 1px;
                background: #d0d7de;
            }

            .divider::before {
                left: 0;
            }

            .divider::after {
                right: 0;
            }

        .footer-text {
            text-align: center;
            margin-top: 16px;
            font-size: 13px;
            color: #57606a;
        }

            .footer-text a {
                color: #0969da;
                text-decoration: none;
            }

                .footer-text a:hover {
                    text-decoration: underline;
                }

        /* Loading overlay */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #0969da;
            border-radius: 50%;
            width: 48px;
            height: 48px;
            animation: spin 1s linear infinite;
        }

        .google-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }</style>
</head>
<body>
    <div class="main-wrapper">
        <div class="login-container">
            <div class="header">
                <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="Logo" />
                <h1>Sign in to My Portal</h1>
            </div>
            <div class="login-card">
                <form method="post" asp-controller="Account" asp-action="DefaultLogin" onsubmit="showLoader()">
                    <label>Email address</label>
                    <input type="email" name="username" class="form-control" placeholder="you@example.com" required />
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" placeholder="••••••••" required />
                    <button type="submit" class="btn-primary">Sign in</button>
                </form>

                <div class="divider">or</div>

                <!-- Google Sign In -->
                <div id="g_id_onload"
                     data-client_id="681279342504-m8r5c16fibbhfm8pnkehejdiabilmme3.apps.googleusercontent.com"
                     data-context="signin"
                     data-ux_mode="popup"
                     data-callback="handleCredentialResponse"
                     data-auto_prompt="false">
                </div>
                <div class="google-wrapper">
                <div class="g_id_signin"
                     data-type="standard"
                     data-shape="rectangular"
                     data-theme="outline"
                     data-text="sign_in_with"
                     data-size="large"
                     data-logo_alignment="left">
                </div>
                </div>
            </div>
            <p class="footer-text">New to My Portal? <a href="#">Create an account</a></p>
        </div>
    </div>

    <!-- Loading overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <script>
        function showLoader() {
            document.getElementById("loadingOverlay").style.display = "flex";
        }

        async function handleCredentialResponse(response) {
            console.log("Encoded JWT ID token: " + response.credential);
            showLoader();

            const res = await fetch('/Account/GoogleLogin', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ token: response.credential })
            });

            const data = await res.json();
            if (data.success) {
                window.location.href = '/Home/Index';
            } else {
                document.getElementById("loadingOverlay").style.display = "none";
                alert("Login failed: " + (data.message || "Unknown error"));
            }
        }
    </script>
</body>
</html>
