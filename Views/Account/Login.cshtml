@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <!-- Google Identity Services -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
            animation: fadeIn 0.7s ease-in-out;
        }

        h1 {
            margin-bottom: 25px;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            margin: 10px 0;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 15px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #667eea;
                outline: none;
                box-shadow: 0 0 5px rgba(102,126,234,0.5);
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            margin-top: 15px;
            background: #667eea;
            border: none;
            color: #fff;
            font-size: 16px;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .btn-login:hover {
                background: #5563c1;
            }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
            color: #888;
            font-size: 14px;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #ddd;
            }

            .divider:not(:empty)::before {
                margin-right: .75em;
            }

            .divider:not(:empty)::after {
                margin-left: .75em;
            }

        .g_id_signin {
            display: flex;
            justify-content: center;
        }
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
        
    </style>
</head>
<body>
    <div class="login-card">
        <h1>Welcome To My Portal!</h1>

        <!-- Fake form just for design -->
        <input type="text" class="form-control" placeholder="Mobile number or Email" />
        <input type="password" class="form-control" placeholder="Password" />
        <button class="btn-login">Login</button>

        <div class="divider">OR</div>

        <!-- Google Sign In -->
        <div id="g_id_onload"
             data-client_id="681279342504-m8r5c16fibbhfm8pnkehejdiabilmme3.apps.googleusercontent.com"
             data-context="signin"
             data-ux_mode="popup"
             data-callback="handleCredentialResponse"
             data-auto_prompt="false">
        </div>

        <div class="g_id_signin"
             data-type="standard"
             data-shape="rectangular"
             data-theme="outline"
             data-text="sign_in_with"
             data-size="large"
             data-logo_alignment="left">
        </div>
    </div>

    <script>
        async function handleCredentialResponse(response) {
            // Google JWT token
            console.log("Encoded JWT ID token: " + response.credential);

            // Send token to server for validation and session creation
            const res = await fetch('/Account/GoogleLogin', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ token: response.credential })
            });

            const data = await res.json();
            if (data.success) {
                
                window.location.href = '/Home/Index';
            } else {
                alert("Login failed: " + (data.message || "Unknown error"));
            }
        }
    </script>
</body>
</html>
