@model IEnumerable<YourNamespace.Models.User>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="d-flex align-items-center gap-2 mb-0">
            <i class="bi bi-people-fill text-primary"></i>
            Registered Users
        </h2>

        <!-- Download button -->
        <button class="btn btn-primary shadow-sm" onclick="downloadTable()">
            <i class="bi bi-download me-1"></i> Download
        </button>
    </div>

    <div class="table-responsive shadow-lg rounded-3">
        <table id="usersTable" class="table table-hover table-borderless align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Status</th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Google Id</th>
                    <th>Picture</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var u in Model)
                    {
                        <tr class="bg-light">
                            <td>
                                <span class="badge bg-success rounded-pill">
                                    <i class="bi bi-circle-fill me-1"></i> Online
                                </span>
                            </td>
                            <td><span class="fw-bold text-secondary">@u.Id</span></td>
                            <td>@u.Name</td>
                            <td class="text-muted">@u.Email</td>
                            <td><code>@u.GoogleId</code></td>
                            <td>
                                <img src="@Url.Content("/images/" + @u.Email + ".jpg")"
                                     width="50" height="50"
                                     class="rounded-circle border border-2 border-white shadow-sm" />
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-person-x"></i> No users found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>