<div class="library-container">
    <div class="library-header">
        <h2><i class="bi bi-youtube" style="color:#FF0000; font-size:33px;"></i>  Video Library</h2>
        <div class="library-header d-flex justify-content-between align-items-center flex-wrap" style="width: 350px;">
        <form id="topSearchForm" class="d-flex" onsubmit="event.preventDefault(); submitTopSearch();">
            <input id="topSearchInput" class="form-control me-2" type="search" placeholder="Search YouTube..." aria-label="Search">
            <button class="btn btn-success" type="submit">Search</button>
        </form>
            <!-- Refresh Button -->
            <button class="btn btn-outline-primary" type="button" onclick="refreshVideos()">⟳</button>
    </div>
    </div>

    <div class="video-grid" id="videoGrid">
        @foreach (var v in Model)
        {
            <div class="video-card" onclick="openVideo('@v.Id')">
                <img class="thumb" src="@v.Thumb" />
                <div class="video-title">@v.Title</div>
            </div>
        }
    </div>
</div>


<style>
    /* Full height minus top navbar */
    .library-container {
        height: calc(100vh - 70px); /* adjust 70px if your topbar height is different */
        overflow-y: auto;
        padding: 20px;
        box-sizing: border-box;
    }

    .library-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
    }

    .video-card {
        cursor: pointer;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .video-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    .thumb {
        width: 100%;
        height: 120px;
        object-fit: cover;
    }

    .video-title {
        padding: 5px 10px;
        font-size: 14px;
        font-weight: 500;
    }

    /* Optional: smooth scrolling */
    .library-container {
        scroll-behavior: smooth;
    }
</style>
