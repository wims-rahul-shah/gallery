@{
    ViewData["Title"] = "Music Library";
}

<div class="music-shell">
    <h4>🎶 Music Library</h4>

    <div class="music-layout">
        <!-- Sidebar Buttons -->
        <div class="music-sidebar">
            <button class="music-btn active" onclick="music(this)" data-src="https://audiomack.com/embed/neha-kakkar-2/album/top-20-bollywood-songs-2018-9997339">
                🎤 Top 20 Bollywood (2018)
            </button>
            <button class="music-btn" onclick="music(this)" data-src="https://audiomack.com/embed/bollywood-slowed-and-reverb/album/new-hindi-songs-2025">
                🌟 New Hindi Songs 2025
            </button>
            <button class="music-btn" onclick="music(this)" data-src="https://audiomack.com/embed/nusrat-fateh-ali-khan-3/album/bollywood-love-songs-valentines-day-special-5294169">
                ❤️ Bollywood Love Songs
            </button>
            <button class="music-btn" onclick="music(this)" data-src="https://audiomack.com/embed/atif-aslam-7/album/bollywood-heartbreak-songs-3883830">
                💔 Heartbreak Songs
            </button>
            <button class="music-btn" onclick="music(this)" data-src="https://audiomack.com/embed/uditnarayan/album/90s-bollywood-duets-udit-narayanalka-yagnik-9191278">
                🎶 90s Bollywood Duets
            </button>
            <button class="music-btn" onclick="music(this)" data-src="https://audiomack.com/embed/bollywood-slowed-and-reverb/album/new-hindi-songs-2025">
                🔥 Bollywood Slowed & Reverb
            </button>
        </div>

        <!-- Main Player -->
        <div class="music-player">
            <iframe id="music-frame"
                    src="https://audiomack.com/embed/neha-kakkar-2/album/top-20-bollywood-songs-2018-9997339"
                    scrolling="no" frameborder="0" width="100%" height="500">
            </iframe>
        </div>
    </div>
</div>

<style>
    .music-shell {
        margin-top: 0px;
        max-width: 1200px;
        margin: auto;
        padding: 18px;
        border-radius: 20px;
        background: #111827;
        color: #fff;
        font-family: 'Poppins', sans-serif;
        box-shadow: 0 0 20px rgba(0, 200, 255, 0.2);
    }

        .music-shell h4 {
            text-align: center;
            margin-bottom: 20px;
            color: #0ff;
            text-shadow: 0 0 8px #0ff;
        }

    .music-layout {
        display: flex;
        gap: 20px;
    }

    /* Sidebar */
    .music-sidebar {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .music-btn {
        background: #1f2937;
        color: #fff;
        padding: 12px;
        border: none;
        border-radius: 10px;
        text-align: left;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .music-btn:hover {
            background: #0ea5e9;
            color: #fff;
        }

        .music-btn.active {
            background: #0ff;
            color: #000;
            font-weight: 600;
            box-shadow: 0 0 10px #0ff;
        }

    /* Player */
    .music-player {
        flex: 3;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 200, 255, 0.3);
    }

    iframe {
        border: none;
        width: 100%;
        height: 100%;
        min-height: 500px;
        border-radius: 15px;
    }
</style>

