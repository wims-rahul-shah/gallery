<div class="games-wrapper">
    <!-- Game selector buttons -->
    <div class="game-buttons">
        <button class="game-btn" onclick="loadGame('tetris', this)">
            🎮 Tetris
        </button>
        <button class="game-btn" onclick="loadGame('snake', this)">
            🐍 Snake
        </button>
        <button class="game-btn" onclick="loadGame('flappybird', this)">
            🐦 Flappy Bird
        </button>
        <button class="game-btn" onclick="loadGame('quiz', this)">
            ❓ Quiz
        </button>
    </div>

    <!-- Game display area -->
    <div id="gameContainer">
        <p class="placeholder">🎲 Select a game to start playing!</p>
    </div>
</div>

<style>
    body {
        
        background: radial-gradient(circle at top left, #0f2027, #203a43, #2c5364);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
    }

    .games-wrapper {
        margin-top: 0px;
        display: flex;
        gap: 25px;
        align-items: flex-start;
        padding: 20px;
    }

    /* Sidebar buttons */
    .game-buttons {
        display: flex;
        flex-direction: column;
        gap: 15px;
        min-width: 180px;
    }

    .game-btn {
        padding: 14px 22px;
        border-radius: 12px;
        background: linear-gradient(135deg, #00f2fe, #4facfe);
        color: #111;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        border: none;
        text-align: left;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(0, 242, 254, 0.4);
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .game-btn:hover {
            transform: translateX(5px) scale(1.05);
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            box-shadow: 0 6px 18px rgba(79, 172, 254, 0.7);
            color: #fff;
        }

        .game-btn.active {
            background: linear-gradient(135deg, #ff512f, #dd2476);
            color: #fff !important;
            box-shadow: 0 6px 20px rgba(255, 81, 47, 0.6);
        }

    /* Game container */
    #gameContainer {
        margin-top: 0;
        flex: 1;
        max-width: 360px; /* keep same size as Tetris */
        margin: 0 auto;
        border: 7px solid #ccc;
        border-radius: 12px;
        padding: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #111;
        color: #fff;
        aspect-ratio: 9 / 16; /* keeps vertical game-like shape */
        overflow: hidden; /* stop oversized iframe/canvas */
    }

        #gameContainer canvas,
        #gameContainer iframe {
            width: 100%;
            height: 100%; /* always fill container */
            max-width: 100%; /* don’t stretch beyond container */
            max-height: 100%;
            object-fit: contain; /* preserve aspect ratio */
            border: 0;
        }

    .placeholder {
        font-size: 18px;
        font-weight: 800;
        color: white; /* bright neon cyan */
        text-shadow: 0 0 8px #0ff, 0 0 15px #00f; /* glow effect */
        text-align: center;
    }

    @@keyframes pulse {
        0%

    {
        opacity: 0.5;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0.5;
    }

    }

    /* Responsive */
    @@media (max-width: 900px) {
        .games-wrapper

    {
        flex-direction: column;
        align-items: center;
    }

    .game-buttons {
        flex-direction: row;
        justify-content: center;
        width: 100%;
    }

    .game-btn {
        flex: 1;
        text-align: center;
    }

    #gameContainer {
        width: 100%;
        min-height: 300px;
    }

    }
</style>
