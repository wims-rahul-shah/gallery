<div class="chat-container">
    <div id="chatBox" class="chat-box">
        <span>🤖 Ask Anything From Me!!</span>
        <!-- Messages will appear here -->
    </div>

    <div id="typingIndicator" class="typing-indicator" style="display:none;">
        <span>🤖 ChatBot is typing...</span>
    </div>

    <div class="chat-input-wrapper">
        <input type="text" id="chatInput" class="form-control" placeholder="Type your message..." />
        <button id="sendBtn" class="btn btn-primary ms-2" onclick="initChat()">Send</button>
    </div>
</div>

<style>
    .chat-container {
        max-width: 1100px;
        margin: 20px auto;
        display: flex;
        flex-direction: column;
        height: 79vh;
    }

    .chat-box {
        flex: 1;
        border: 1px solid #dee2e6;
        border-radius: 12px;
        padding: 12px;
        overflow-y: auto;
        background: #f8f9fa;
        box-shadow: inset 0 0 6px rgba(0,0,0,0.05);
    }

    .typing-indicator {
        font-style: italic;
        font-size: 0.9rem;
        color: #6c757d;
        margin: 6px 0;
    }

    .chat-input-wrapper {
        display: flex;
        margin-top: 10px;
    }

    .msg-wrapper {
        display: flex;
        align-items: flex-start;
        margin: 8px 0;
    }

        .msg-wrapper.from-user {
            justify-content: flex-end;
        }

        .msg-wrapper.from-bot {
            justify-content: flex-start;
        }

    .avatar {
        margin: 0 6px;
        font-size: 1.4rem;
    }

    .msg {
        padding: 8px 12px;
        border-radius: 12px;
        max-width: 70%;
        line-height: 1.4;
    }

    .msg-user {
        background: #0d6efd;
        color: white;
    }

    .msg-bot {
        background: white;
        border: 1px solid #dee2e6;
        color: #212529;
    }

        /* Markdown formatting */
        .msg-bot pre {
            background: #212529;
            color: #f8f9fa;
            padding: 8px 12px;
            border-radius: 8px;
            overflow-x: auto;
            margin: 6px 0;
            font-family: monospace;
            font-size: 0.9rem;
        }

        .msg-bot code {
            background: #f1f3f5;
            padding: 2px 6px;
            border-radius: 4px;
            font-family: monospace;
            font-size: 0.9rem;
            color: #d6336c;
        }

        .msg-bot b {
            font-weight: 600;
            color: #000;
        }

        .msg-bot i {
            font-style: italic;
            color: #495057;
        }

        .msg-bot ul, .msg-bot ol {
            margin: 4px 0 4px 20px;
            padding: 0;
        }
</style>