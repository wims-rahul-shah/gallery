<div class="quiz-shell">


    <div class="score-board mb-3">
        Score: <span id="quizScore">0</span>
    </div>

    <div id="quizContainer"
         class="quiz-container border rounded shadow-sm"
         style="max-width: 650px; margin: auto;">
        <!-- Quiz questions will load here -->
    </div>

    <div class="quiz-controls mt-4 d-flex justify-content-center" style="gap: 15px;">
        <button id="startQuiz" class="control-btn start">Start</button>
        <button id="restartQuiz" class="control-btn secondary">Restart</button>
    </div>
</div>

<!-- ✅ Styling -->
<style>
    /* quiz.css */
    .quiz-shell {
        max-width: 720px;
        margin: 2rem auto;
        text-align: center;
        padding: 20px;
        border-radius: 20px;
        background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460);
        box-shadow: 0 0 30px rgba(0, 128, 255, 0.3), 0 0 60px rgba(0, 128, 255, 0.2) inset;
        color: #fff;
        font-family: 'Poppins', sans-serif;
        position: relative;
    }

        .quiz-shell h4 {
            margin-bottom: 15px;
            color: #08f;
            text-shadow: 0 0 6px #08f, 0 0 15px #08f, 0 0 25px #08f;
        }

        .quiz-shell .score-board {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: #08f;
            text-shadow: 0 0 5px #08f;
        }

    #quizContainer {
        border-radius: 15px;
        padding: 25px;
        background: #0d1b2a;
        box-shadow: 0 0 20px #08f inset;
        border: 2px solid #08f;
        animation: glowPulse 2s infinite alternate;
    }

    .quiz-question {
        font-size: 14px;
        margin-bottom: 20px;
        font-weight: bold;
        color: #fff;
        text-shadow: 0 0 5px #08f;
    }

    .quiz-options {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .quiz-option {
        padding: 12px 20px;
        border-radius: 12px;
        border: none;
        background: linear-gradient(145deg, #08f, #0044ff);
        color: #fff;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        box-shadow: 0 0 10px #08f, 0 0 20px #08f inset;
        transition: all 0.2s ease-in-out;
        user-select: none;
    }

        .quiz-option:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px #08f, 0 0 40px #08f inset;
        }

        .quiz-option.correct {
            background: linear-gradient(145deg, #00ff99, #00cc66);
            box-shadow: 0 0 20px #0f6, 0 0 40px #0f6 inset;
            color: #fff;
        }

        .quiz-option.wrong {
            background: linear-gradient(145deg, #ff0044, #990022);
            box-shadow: 0 0 20px #f00, 0 0 40px #f00 inset;
            color: #fff;
        }

    .quiz-controls {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

        .quiz-controls .control-btn {
            padding: 8px 20px;
            border-radius: 12px;
            border: none;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 0 0 10px #08f, 0 0 20px #08f inset;
            transition: all 0.2s ease-in-out;
            user-select: none;
        }

            .quiz-controls .control-btn.start {
                background: linear-gradient(145deg, #00ffcc, #0099cc);
                color: #111;
            }

            .quiz-controls .control-btn.secondary {
                background: linear-gradient(145deg, #f0f, #800080);
                color: #fff;
            }

            .quiz-controls .control-btn:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px #08f, 0 0 40px #08f inset;
            }

    @@keyframes glowPulse {
        0%, 100%

    {
        box-shadow: 0 0 20px #08f inset;
    }

    50% {
        box-shadow: 0 0 35px #08f inset;
    }

    }
</style>