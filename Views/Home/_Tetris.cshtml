<div class="snake-game-shell">
    

    <canvas id="tetrisCanvas" width="320" height="400"></canvas>

    <div class="score-board">
        Score: <span id="tetrisScore">0</span>
    </div>

    <div class="controls">
        <div class="direction-row">
            <button id="left" class="control-btn">◀</button>
            <button id="right" class="control-btn">▶</button>
        </div>
        <div class="direction-row">
            <button id="rotate" class="control-btn">⟳</button>
            <button id="down" class="control-btn">▼</button>
        </div>
        <div class="direction-row" style="gap: 10px; margin-top: 15px;">
            <button id="startTetris" class="control-btn start">Start</button>
            <button id="pauseTetris" class="control-btn pause">Pause</button>
            <button id="restartTetris" class="control-btn secondary">Restart</button>
        </div>
    </div>
</div>
