<div class="snake-game-shell">
    
    <canvas id="snakeCanvas" width="720" height="720"></canvas>

    <div class="score-board">
        Score: <span id="snakeScore">0</span>
    </div>

    <div class="controls">
        <div class="direction-row">
            <button id="up" class="control-btn">▲</button>
        </div>
        <div class="direction-row">
            <button id="left" class="control-btn">◀</button>
            <button id="right" class="control-btn">▶</button>
        </div>
        <div class="direction-row">
            <button id="down" class="control-btn">▼</button>
        </div>
        <div class="direction-row" style="gap: 10px; margin-top: 15px;">
            <button id="startSnake" class="control-btn start">Start</button>
            <button id="pauseSnake" class="control-btn pause">Pause</button>
            <button id="restartSnake" class="control-btn secondary">Restart</button>
        </div>
    </div>
</div>
