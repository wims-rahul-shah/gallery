@model List<YourNamespace.Controllers.HomeController.NewsArticle>

<div class="library-container">
    <div class="library-header">
        <h2><i class="bi bi-newspaper" style="color:#0d6efd; font-size:33px;"></i> News Library</h2>

        <div class="library-header d-flex justify-content-between align-items-center flex-wrap" style="width: 350px;">
            <!-- Search Form -->
            <form id="newsSearchForm" class="d-flex" onsubmit="event.preventDefault(); submitNewsSearch();">
                <input id="newsSearchInput" class="form-control me-2" type="search"
                       placeholder="Search News..." aria-label="Search">
                <button class="btn btn-success" type="submit">Search</button>
            </form>

            <!-- Refresh Button -->
            <button class="btn btn-outline-primary" type="button" onclick="refreshNews()">⟳</button>
        </div>
    </div>

    <!-- News Grid -->
    <div class="video-grid" id="newsGrid">
        @foreach (var article in Model)
        {
            <div class="video-card">
                @if (!string.IsNullOrEmpty(article.Image))
                {
                    <img class="thumb" src="@article.Image" alt="News image" />
                }
                <div class="video-title">
                    @article.Title
                </div>
                <div class="p-2">
                    <a href="@article.Url" target="_blank" class="btn btn-sm btn-outline-primary w-100">Read More</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Reuse YouTube style for News */
    .library-container {
        height: calc(100vh - 110px);
        overflow-y: auto;
        padding: 15px;
        box-sizing: border-box;
        scroll-behavior: smooth;
    }

    .library-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
    }

    .video-card {
        cursor: pointer;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
        background: #fff;
    }

        .video-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    .thumb {
        width: 100%;
        height: 120px;
        object-fit: cover;
    }

    .video-title {
        padding: 5px 10px;
        font-size: 14px;
        font-weight: 500;
        min-height: 40px;
    }
</style>
