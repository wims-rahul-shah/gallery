@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Dashboard</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- App Styles -->
    <link rel="stylesheet" href="~/css/snake.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />

    <!-- Loader + GitHub-like base variables -->
    <style>
        :root{
            --gh-bg:#f6f8fa;
            --gh-card:#ffffff;
            --gh-border:#d0d7de;
            --gh-text:#24292f;
            --gh-subtle:#57606a;
            --gh-blue:#0969da;
        }

        html, body {
            height: 100%;
            margin: 0;
            background: var(--gh-bg);
            color: var(--gh-text);
        }

        body {
            display: flex;
            flex-direction: column;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
            font-size: 14px;
            line-height: 1.5;
        }

        /* Topbar fixed */
        .navbar {
            height: 56px;
            border-bottom: 1px solid var(--gh-border);
            position: sticky;
            top: 0;
            z-index: 1050;
            background: #d3d3d3;
        }

        /* Container for sidebar + main content */
        .main-wrapper {
            flex: 1;
            display: flex;
            height: calc(100vh - 56px);
            overflow: hidden;
        }

        /* Sidebar drawer */
        .sidebar {
            width: 260px;
            background: #0d1117; /* GitHub dark nav */
            color: #c9d1d9;
            overflow-y: auto;
            border-right: 1px solid rgba(240,246,252,0.1);
            transition: transform .25s ease-in-out;
        }
        .sidebar .nav-link{
            color:#c9d1d9;
            border-radius: 8px;
            padding: .5rem .75rem;
            font-weight: 500;
        }
        .sidebar .nav-link:hover{
            background: rgba(240,246,252,0.08);
            color:#fff;
        }
        .sidebar .nav-link.active{
            background: rgba(9,105,218,0.2);
            color:#fff;
        }

        /* Mobile: off-canvas */
        @@media (max-width: 991px) {
            .sidebar {
                position: fixed;
                top: 56px;
                bottom: 0;
                left: 0;
                transform: translateX(-100%);
                z-index: 1041;
            }
            .sidebar.show {
                transform: translateX(0);
            }
            .sidebar-close {
                display: inline-flex;
            }
        }
        @@media (min-width: 992px){
            .sidebar-close { display: none; }
        }

        /* Sidebar overlay for outside click to close */
        .sidebar-overlay{
            display:none;
            position: fixed;
            inset: 56px 0 0 0; /* below navbar */
            background: rgba(0,0,0,.4);
            z-index: 1040;
        }
        .sidebar-overlay.show{ display:block; }

        /* Main content */
        #mainContent {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
        }

        /* Content card look like GitHub */
        .gh-card{
            background: var(--gh-card);
            border: 1px solid var(--gh-border);
            border-radius: 12px;
            box-shadow: 0 1px 0 rgba(27,31,36,0.04);
        }

        /* Profile image */
        .profile-img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* Global loading overlay */
        .loader-overlay{
            display:none;
            position: fixed;
            inset: 0;
            background: rgba(255,255,255,.8);
            z-index: 2000;
            align-items: center;
            justify-content: center;
        }
        .loader-overlay.show{ display:flex; }
        .spinner{
            width: 52px;
            height: 52px;
            border: 4px solid #e1e4e8;
            border-top-color: var(--gh-blue);
            border-radius: 50%;
            animation: spin .8s linear infinite;
        }
        @@keyframes spin{ to{ transform: rotate(360deg);} }
    </style>

    <!-- Vendor JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/showdown@2.1.0/dist/showdown.min.js"></script>
</head>
<body>
    <!-- Top Navbar -->
    @await Html.PartialAsync("_Topbar")

    <!-- Sidebar Overlay (click to close on mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="hideSidebar()"></div>

    <div class="main-wrapper">
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <!-- Main Content -->
        <div class="flex-fill" id="mainContent">
            @RenderBody()
        </div>
    </div>

    <!-- Video Modal -->
    <div class="modal fade" id="videoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Player</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="videoModalClose"></button>
                </div>
                <div class="modal-body">
                    <div class="ratio ratio-16x9">
                        <iframe id="videoFrame" src="" title="Video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Global loader -->
    <div class="loader-overlay" id="loaderOverlay" aria-hidden="true">
        <div class="spinner" role="status" aria-label="Loading"></div>
    </div>

    <!-- App scripts (existing logic preserved, with small additions for loader & sidebar close) -->
    <script src="~/js/site.js"></script>
</body>
</html>
