{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // If you keep SQLite:
    "DefaultConnection": "Data Source=/home/data/app.db"
    // If you migrate to Azure SQL (recommended):
    // "DefaultConnection": "Server=tcp:<your-sql-server>.database.windows.net,1433;Database=<db>;User ID=<user>;Password=<password>;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "Auth": {
    "Google": {
      "ClientId": "<set in Azure App Settings as Auth__Google__ClientId>",
      "ClientSecret": "<set in Azure App Settings as Auth__Google__ClientSecret>",
      "CallbackPath": "/signin-google"
    }
  },
  "Storage": {
    "UseAzureBlob": true,
    "Container": "images",
    "AccountName": "<set as env: Storage__AccountName>",
    "BlobServiceUrl": "https://<yourstorage>.blob.core.windows.net/"
    // If NOT using Managed Identity, set a connection string as Storage__ConnectionString
  }
}